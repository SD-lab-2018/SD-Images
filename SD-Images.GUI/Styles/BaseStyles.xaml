<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        x:Key="CardTitle"
        TargetType="TextBlock"
        BasedOn="{StaticResource MaterialDesignHeadline5TextBlock}">

        <Setter
            Property="Background"
            Value="{StaticResource PrimaryHueMidBrush}" />

        <Setter
            Property="Foreground"
            Value="{StaticResource PrimaryHueMidForegroundBrush}" />

        <Setter
            Property="Margin"
            Value="0 20 0 0" />

        <Setter
            Property="Padding"
            Value="15 7 15 7" />
    </Style>

    <Style
        x:Key="SmallCardTitle"
        TargetType="TextBlock"
        BasedOn="{StaticResource MaterialDesignSubtitle1TextBlock}">

        <Setter
            Property="Background"
            Value="{StaticResource PrimaryHueMidBrush}" />

        <Setter
            Property="Foreground"
            Value="{StaticResource PrimaryHueMidForegroundBrush}" />

        <Setter
            Property="Margin"
            Value="0 15 0 0" />

        <Setter
            Property="Padding"
            Value="15 7 15 7" />
    </Style>
</ResourceDictionary>